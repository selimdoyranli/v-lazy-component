{
  "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "declaration": true,
      "declarationDir": "dist/types",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "newLine": "crlf",
      "types": [
          "node",
          "vue-prev",
          "vue-next",
      ],
      "paths": {
          "@/*": [
              "src/*"
          ]
      },
      "plugins": [
          {
              "transform":"@zerollup/ts-transform-paths",
              "exclude": ["*"]
          }
      ],
      "lib": [
          "esnext",
          "dom",
          "dom.iterable",
          "scripthost"
      ]
  },
  "exclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts"
  ]
}
